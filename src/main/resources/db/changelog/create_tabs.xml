<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="karpovich">

        <createTable tableName="organizations">
            <column name="id" type="bigint"><constraints primaryKey="true"/></column>
            <column name="org_name" type="varchar(255)"/>
            <column name="salary" type="varchar(255)"/>
        </createTable>
        <createTable tableName="account_entity">
            <column name="id" type="bigint"><constraints primaryKey="true"/></column>
            <column name="password" type="varchar(128)"/>
            <column name="name" type="varchar(128)"/>
            <column name="role" type="varchar(128)"/>
            <column name="organization_id" type="bigint">
                <constraints foreignKeyName="fk_organization" referencedTableName="organizations"
                             referencedColumnNames="id" nullable="true"/>
            </column>
            <column name="is_activated" type="bit(1)"/>
            <column name="email" type="varchar(255)"/>

        </createTable>

        <createTable tableName="clientdetails">
            <column name="appId" type="VARCHAR(255)"><constraints primaryKey="true"/></column>
            <column name="resourceIds" type="VARCHAR(255)"/>
            <column name="appSecret" type="VARCHAR(255)"/>
            <column name="scope" type="VARCHAR(255)"/>
            <column name="grantTypes" type="VARCHAR(255)"/>
            <column name="redirectUrl" type="VARCHAR(255)"/>
            <column name="authorities" type="VARCHAR(255)"/>
            <column name="access_token_validity" type="int"/>
            <column name="refresh_token_validity" type="int"/>
            <column name="additionalInformation" type="VARCHAR(4096)"/>
            <column name="autoApproveScopes" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="oauth_access_token">
            <column name="authentication_id" type="VARCHAR(255)"><constraints primaryKey="true"/></column>
            <column name="token" type="LONGBLOB"/>
            <column name="token_id" type="VARCHAR(255)"/>
            <column name="user_name" type="VARCHAR(255)"/>
            <column name="client_id" type="VARCHAR(255)"/>
            <column name="authentication" type="LONGBLOB"/>
            <column name="refresh_token" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="oauth_approvals">
            <column name="userId" type="VARCHAR(255)"><constraints primaryKey="true"/></column>
            <column name="clientId" type="VARCHAR(255)"/>
            <column name="scope" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="expiresAt" type="TIMESTAMP"/>
            <column name="lastModifiedAt" type="TIMESTAMP"/>
        </createTable>
        <createTable tableName="oauth_client_details">
            <column name="client_id" type="VARCHAR(255)"><constraints primaryKey="true"/></column>
            <column name="resource_ids" type="VARCHAR(255)"/>
            <column name="client_secret" type="VARCHAR(255)"/>
            <column name="scope" type="VARCHAR(255)"/>
            <column name="authorized_grant_types" type="VARCHAR(255)"/>
            <column name="web_server_redirect_uri" type="VARCHAR(255)"/>
            <column name="authorities" type="VARCHAR(255)"/>
            <column name="access_token_validity" type="int"/>
            <column name="refresh_token_validity" type="int"/>
            <column name="additional_information" type="VARCHAR(4096)"/>
            <column name="autoapprove" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="oauth_client_token">
            <column name="authentication_id" type="VARCHAR(255)"><constraints primaryKey="true"/></column>
            <column name="token_id" type="VARCHAR(255)"/>
            <column name="token" type="MEDIUMTEXT"/>
            <column name="user_name" type="VARCHAR(255)"/>
            <column name="client_id" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="oauth_code">
            <column name="code" type="VARCHAR(255)"/>
            <column name="authentication" type="MEDIUMTEXT"/>
        </createTable>
        <createTable tableName="oauth_refresh_token">
            <column name="token_id" type="VARCHAR(255)"/>
            <column name="token" type="LONGBLOB"/>
            <column name="authentication" type="LONGBLOB"/>
        </createTable>
    </changeSet>

    <changeSet author="karpovich" id="02">
               <addAutoIncrement columnDataType="bigint"
                          columnName="id"
                          incrementBy="1"
                          schemaName="liqui"
                          startWith="1"
                          tableName="account_entity"/>
    </changeSet>

</databaseChangeLog>