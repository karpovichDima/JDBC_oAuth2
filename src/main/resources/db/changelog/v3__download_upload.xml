<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rename_organizations" author="karpovich">
        <sql>
            RENAME TABLE liqui.organizations TO liqui.organization;
        </sql>
    </changeSet>

    <changeSet id="rename_column_organization" author="karpovich">
        <sql>
            ALTER TABLE `organization`
            CHANGE COLUMN `org_name` `name` VARCHAR(255) NULL DEFAULT NULL ;
        </sql>
    </changeSet>

    <changeSet id="rename_account" author="karpovich">
        <sql>
            ALTER TABLE `account_entity` RENAME TO `account` ;
        </sql>
    </changeSet>

    <changeSet id="delete_column_root_path" author="karpovich">
        <sql>
            ALTER TABLE account DROP COLUMN root_path;
        </sql>
    </changeSet>




</databaseChangeLog>





