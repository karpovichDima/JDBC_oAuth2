<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add_table_channel" author="karpovich">

        <createTable tableName="storage_parent">
            <column name="storage_id" type="bigint">
                <!--<constraints foreignKeyName="fk_storage_element" referencedTableName="storage_element"-->
                             <!--referencedColumnNames="id" nullable="false" primaryKey="true"/>-->
            </column>
            <column name="parent_id" type="bigint">
                <!--<constraints foreignKeyName="fk_channel" referencedTableName="channel"-->
                             <!--referencedColumnNames="id" nullable="false" primaryKey="true"/>-->
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="storage_id"
                                 baseTableName="storage_parent"
                                 constraintName="fk_storage_element"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="storage_element"/>

        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="storage_parent"
                                 constraintName="fk_storage_element_parent"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="storage_element"/>


        <createTable tableName="channel_account">
            <column name="channel_id" type="bigint">
                <!--<constraints foreignKeyName="fk_channel_accountt" referencedTableName="channel"-->
                             <!--referencedColumnNames="id" nullable="false" primaryKey="true"/>-->
            </column>
            <column name="user_id" type="bigint">
                <!--<constraints foreignKeyName="fk_account_channelt" referencedTableName="account"-->
                             <!--referencedColumnNames="id" nullable="false" primaryKey="true"/>-->
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="channel_id"
                                 baseTableName="channel_account"
                                 constraintName="fk_channel_account"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="storage_element"/>
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="channel_account"
                                 constraintName="fk_account_channel"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="account"/>

    </changeSet>
</databaseChangeLog>
